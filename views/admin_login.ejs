            <% if(typeof errormsg !== "undefined") { %>
                <h5 style="color: rgb(231, 0, 0); text-align: center;"><%= errormsg %></h5>
            <% } %>
            <div class="input-group">
                <input type="email" name="loginAdmin" id="loginAdmin" required>
                <label for="loginAdmin">Email Address</label>
            </div>
            <div class="input-group">
                <input type="password" name="loginPassword" id="loginPassword" required>
                <label for="loginPassword">Password</label>
